    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Launch Jest Tests",
            "request": "launch",
            "env": {"NODE_ENV": "test"},
            "args": [
                "--runInBand",
                "-i"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "runtimeExecutable": "/usr/local/bin/node"
        },
    ]
}
